FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "rho.*"
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       0;
        relTol          0;
    }

    p
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-8;
        relTol          0.001;
    }

    pFinal
    {
        $p;
//        tolerance       1e-15;
        relTol          0;
    }

    "(U|h.fluid)"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-14;
        relTol          0.0001;
    }

    "(U|h.fluid)Final"
    {
        $U;
		tolerance       1e-14;
        relTol          0;
    }
	
	"(h.solid|e.solid).*"
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-14;
        relTol          0.001;
    }
	
	/*"(h.solid|e.solid)Final"
    {
        $"h.solid";
        relTol          0;
    }*/
}

PIMPLE
{
    momentumPredictor no;
	SIMPLErho yes;
    nOuterCorrectors 10;
    nCorrectors     1;
    nNonOrthogonalCorrectors 0;
    pRefCell        0;
    pRefValue       1e5;
	
	residualControl
    {
      /*  U
        {
                tolerance  1e-5;
                relTol      0;
        }
        p
        {
                tolerance  5e-4;
                relTol      0;
        }*/
		"h.fluid"
        {
                tolerance  0.00001;
                relTol      0;
        }
     }
}

relaxationFactors
{
	/**/fields
    {
        p      0.95;
        pFinal   1;
    }
	
    equations
    {
		"(U|h.fluid|e.fluid|Tc)Final"            1;
		U            0.95;
	//	Tc           1;
		h.fluid            0.55;
	//	Tc            0.5;
    }
}

/********************************************

Information on PIMPLE use for 1D nigmatulinFoam

For cell numbers 20 - 80 recomended 
nCorrectors: 1
nOuterCorrectrors: 2
h equation relaxation: 0.8 - 0.99

For cells 160 - 320
nCorrectors: 2
nOuterCorrectrors: 2 - 4
p relaxation: 0.99 - 1
h equation relaxation: 0.9 - 0.99

For cells 640
nCorrectors: 4
nOuterCorrectrors: 2 - 4
p relaxation: 0.99 - 1
U equation relaxation: 0.9
h equation relaxation: 0.99

When gas viscosity is constant with cells 40
nCorrectors: 1
nOuterCorrectrors: 1
No relaxation

********************************************/


